{
  "game": {
    "tileSize": {
      "type": "number",
      "tooltip": "The width and height of tiles in the game",
      "defaultValue": 32
    },
    "startingMap": {
      "type": "string",
      "tooltip": "Map id to first load with the game",
      "defaultValue": "TestMap"
    },
    "lerpAlpha": {
      "type": "number",
      "tooltip": "Camera lerp alpha. 1 = stick to the player, 0.1 = ease into the player's position",
      "defaultValue": 1
    },
    "followPlayer": {
      "type": "boolean",
      "tooltip": "Should the camera follow the player. Recommended for large maps.",
      "defaultValue": true
    },
    "defaultFont": {
      "type": "string",
      "tooltip": "Default font to use in the game. Format is XXpt FONT_NAME",
      "defaultValue": "11pt monospace"
    },
    "timeToShowClickTexture": {
      "type": "number",
      "tooltip": "Time (in seconds) to show the click texture",
      "defaultValue": 0.5
    },
    "clickTexture": {
      "type": "texture",
      "tooltip": "Texture to show when player clicks on the map",
      "defaultValue": ""
    },
    
    "maps": {
      "type": "map",
      "key": {
        "type": "string",
        "tooltip": "The map ID. To be used in actors and in startingMap property",
        "defaultValue": ""
      },
      "value": {
        "src": {
          "type": "src",
          "tooltip": "Map src",
          "defaultValue": ""
        }
      },
      "tooltip": "Game maps",
      "defaultValue": {}
    },
    
    "tooltips": {
      "font": {
        "type": "string",
        "tooltip": "Font to use for tooltips. Format is XXpt FONT_NAME",
        "defaultValue": "11pt monospace"
      },
      "lineSpacing": {
        "type": "number",
        "tooltip": "Spacing between the lines",
        "defaultValue": 4
      },
      "paddingLeftRight": {
        "type": "number",
        "tooltip": "Horizontal padding",
        "defaultValue": 10
      },
      "paddingTopBottom": {
        "type": "number",
        "tooltip": "Vertical padding",
        "defaultValue": 5
      }
    },
    
    "dialogs": {
      "font": {
        "type": "string",
        "tooltip": "Font to use for dialogs. Format is XXpt FONT_NAME",
        "defaultValue": "11pt monospace"
      },
      "width": {
        "type": "number",
        "tooltip": "Dialog box width",
        "defaultValue": 500
      },
      "height": {
        "type": "number",
        "tooltip": "Dialog box height",
        "defaultValue": 200
      },
      "padding": {
        "type": "number",
        "tooltip": "Dialog box padding around the edges",
        "defaultValue": 10
      },
      "actorImageSize": {
        "type": "number",
        "tooltip": "Size to reserve for the player avatar",
        "defaultValue": 64
      },
      "lineSpacing": {
        "type": "number",
        "tooltip": "Spacing between the lines",
        "defaultValue": 8
      }
    },
    
    "tiles": {
      "type": "array",
      "value": {
        "id": {
          "type": "string",
          "tooltip": "Tile id, to be used when creating the actual map tileset",
          "defaultValue": "default"
        },
        "isBlocking": {
          "type": "boolean",
          "tooltip": "Whether this tile is or isn't walkable",
          "defaultValue": ""
        },
        "texture": {
          "type": "texture",
          "tooltip": "The texture used for the tile",
          "defaultValue": ""
        }
      },
      "tooltip": "Game tiles to be used when creating the map",
      "defaultValue": []
    },
  
    "modules": [
      {
        "id": "texture",
        "className": "TextureModule",
        "activation": "auto",
        "config": {
          "src": "string",
          "clip": "array",
          "width": "number",
          "height": "number",
          "scale": "number"
        }
      },
      {
        "id": "webpage",
        "className": "ModuleWebPage",
        "activation": "interact",
        "config": {
          "url": "string",
          "isInFrame": "boolean",
          "scale": "number",
          "useOffset": "object"
        }
      },
      {
        "id": "dialog",
        "className": "ModuleDialog",
        "activation": "interact",
        "disableControllerWhenActive": true,
        "config": {
          "url": "string",
          "dialogId": "string",
          "useOffset": "object"
        }
      },
      {
        "id": "htmlElement",
        "className": "ModuleHTMLElement",
        "activation": "interact",
        "config": {
          "selector": "string"
        }
      },
      {
        "id": "particles",
        "className": "ModuleParticles",
        "activation": "auto",
        "config": {
          
        }
      }
    ]
  },
  "map": {
    "id": {
      "type": "string",
      "tooltip": "Map id",
      "defaultValue": ""
    },
    "name": {
      "type": "string",
      "tooltip": "Map name",
      "defaultValue": ""
    },
    "playerActor": {
      "type": "string",
      "tooltip": "ID of the player controlled actor",
      "defaultValue": "player"
    },
    "padding": {
      "type": "number",
      "tooltip": "padding between the map and the edges of the container",
      "defaultValue": 20
    },
    "defaultTile": {
      "type": "string",
      "tooltip": "Default tile ID to use for empty tiles in the grid",
      "defaultValue": "default"
    },
    "grid": {
      "type": "array",
      "value": "array",
      "tooltip": "Tileset",
      "defaultValue": [
        ["", "", "", "", ""],
        ["", "", "", "", ""],
        ["", "", "", "", ""],
        ["", "", "", "", ""],
        ["", "", "", "", ""]
      ]
    },
    "actors": {
      "type": "array",
      "value": {
        
      },
      "tooltip": "Actors in the map",
      "defaultValue": []
    }
  }
}